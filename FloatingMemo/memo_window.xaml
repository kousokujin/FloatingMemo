<Window x:Class="FloatingMemo.memo_window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="memo_window" Height="181.863" Width="279.921" MouseLeftButtonDown="Window_MouseLeftButtonDown" WindowStyle="None" Foreground="{DynamicResource {x:Static SystemColors.ActiveCaptionTextBrushKey}}">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="{x:Static SystemParameters.CaptionHeight}"
                      ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>
    <!--<Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">-->
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="5"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
            <Button x:Name="menu_button" Content="u" Style="{DynamicResource CaptionButtonStyleKey}" >
                <Button.ContextMenu>
                    <ContextMenu >
                        <MenuItem Header="非表示"/>
                        <MenuItem Header="オプション"/>
                    </ContextMenu>
                </Button.ContextMenu>

            </Button>
            <Button Content="r" Style="{DynamicResource CaptionButtonStyleKey}" Click="Button_Click" />
        </StackPanel>
    </Grid>
</Window>
